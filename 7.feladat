def megfordit(mondat):
	uj=""
	ujmondat=""
	# mondat=mondat[::-1]
	# lista=mondat.split(" ")
	lista=mondat[::-1]
	for i in lista:
		uj+=i
	uj=uj.lower()
	szavak=uj.split(" ")
	for i in szavak:
		ujmondat+=i
	return ujmondat

def eredeti(mondat):
	emondat=""
	mondat=mondat.lower()
	szavak=mondat.split(" ")
	for j in szavak:
		emondat+=j
	return emondat

mondat=("Indul a görög aludni")
print(mondat)
print(megfordit(mondat))
print(eredeti(mondat))
