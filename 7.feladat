def megfordit(mondat):
	mondat=mondat.lower()
	szavak=mondat[::-1]
	print(szavak)
	ujszavak=szavak.split(" ")
	ujszavak=ujszavak[::-1]
	return ujszavak

def eredeti(mondat):
	mondat = mondat.lower()
	eszavak = mondat.split(" ")
	return eszavak


mondat=("Indul a görög bab aludni")
print(mondat)
