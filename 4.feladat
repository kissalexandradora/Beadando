def piglatinnyelv(mondat):
    mondat=mondat.lower()
    ujmondat = ""
    ujszo=""
    valasz=""
    szavak = mondat.split(" ")
    for j in szavak:
        elso = j[0]
        ujszo +=j[1:] + elso + "ay"+" "
    ujmondat+=ujszo
    return ujmondat.capitalize()


